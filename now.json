{
  "version": 2,
  "builds": [
    { "src": "server/*.js", "use": "@now/node@canary" },
    { "src": "package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/routes.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "env": {
    "DB_URL": "@db-url",
    "EMAIL_ADDRESS": "jesal.patel.1@hotmail.co.uk",
    "SENDGRID_API": "@sendgrid-api-key"
  }
}

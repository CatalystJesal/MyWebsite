{
  "version": 2,
  "builds": [
    { "src": "server/routes.js", "use": "@now/node" },
    { "src": "package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/routes.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "env": {
    "DB_URL": "@db-url",
    "EMAIL_ADDRESS": "@email-address",
    "SES_ACCESS": "@ses-access",
    "SES_SECRET": "@ses-secret"
  }
}
